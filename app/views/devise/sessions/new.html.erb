<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="msg">Sign in to start your session</div>
  <div class="input-group">
      <span class="input-group-addon">
          <i class="material-icons">email</i>
      </span>
      <div class="form-line">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email"  %>
      </div>
  </div>
  <div class="input-group">
      <span class="input-group-addon">
          <i class="material-icons">lock</i>
      </span>
      <div class="form-line">
          <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Password" %>
      </div>
  </div>
  <div class="row">
      <div class="col-xs-8 p-t-5">
          <%= f.check_box :remember_me, class: "filled-in chk-col-pink" %>
          <label for="rememberme">Remember Me</label>
      </div>
      <div class="col-xs-4">
          <%= f.submit "Sign in" , class: "btn btn-block bg-pink waves-effect"%>
      </div>
  </div>
  <div class="row m-t-15 m-b--20">
      <div class="col-xs-6">
          <a href="/users/sign_up">Register Now!</a>
      </div>
      <div class="col-xs-6 align-right">
          <a href="forgot-password.html">Forgot Password?</a>
      </div>
  </div>
<% end %>

