                                    </ul>
                                </li>
                            </ul>
                        </div>
                        <div class="body">
                            <%= form_tag(change_world_role_path(:world_title, :role, :id => @world.id), {:method => :post, :class => "form form-horizontal"}) do %>
                         <div class="field">
                         <label>World: </label>
                         <%= select_tag :world_title, options_for_select(@world_titles2), :required => true %>
                        </div>
                        <div class="field">
                         <label>New Role: </label>
                         <%= select_tag :role, options_for_select(@roles), :required => true %>
                         </div>
                        <br>

                         <p><%= submit_tag 'Submit', class: "btn btn-block btn-lg bg-pink waves-effect", data: { confirm: "Are you sure?" }  %></p>
                         <%end%>
                        </div>
                    </div>
                </div>
                <!-- #END# Table -->

        </div>
    </section>



