    <div class="container-fluid">
            <div class="block-header">
                <h2>Add/Remove Roles</h2>
            </div>

            <div class="row clearfix">
                <!-- Table -->
                <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8">
                    <div class="card">
                        <div class="header">
                            <h2>Add World to role table of <%=@world.title%></h2>
                            <ul class="header-dropdown m-r--5">
                                <li class="dropdown">
                                    <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                        <i class="material-icons">more_vert</i>
                                    </a>
                                    <ul class="dropdown-menu pull-right">
                                        <li><a href="javascript:void(0);">Action</a></li>
                                        <li><a href="javascript:void(0);">Another action</a></li>
                                        <li><a href="javascript:void(0);">Something else here</a></li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                        <div class="body">
                            <%= form_tag(add_world_path(:world_title, :role, :id => @world.id), {:method => :post, :class => "form form-horizontal"}) do %>
                         <div class="field">
                         <label>World: </label>
                        <%= select_tag :world_title, options_for_select(@world_titles), :required => true %>
                        </div>

                        <div class="field">
                         <label>Role: </label>
                         <%= select_tag :role, options_for_select(@roles), :required => true %>
                         </div>
                        <br>
                        <p><%= submit_tag 'Submit', class: "btn btn-block btn-lg bg-pink waves-effect" , data: { confirm: "Are you sure?" } %></p>
              <% end %>
                        </div>
                    </div>
                </div>
                <!-- #END# Table -->

                <!-- Table -->
                <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8">
                    <div class="card">
                        <div class="header">
