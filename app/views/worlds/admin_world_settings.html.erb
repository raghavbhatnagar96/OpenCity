    <div class="container-fluid">
            <div class="block-header">
                <h2>World Settings</h2>
            </div>

            <div class="row clearfix">
                <!-- Table -->
                <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8">
                    <div class="card">
                        <div class="header">
                            <h2>Welcome Admin, Worlds Connected to <%= @world.title %>:</h2>
                            <ul class="header-dropdown m-r--5">
                                <li class="dropdown">
                                    <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                        <i class="material-icons">more_vert</i>
                                    </a>
                                    <ul class="dropdown-menu pull-right">
                                        <li><a href="javascript:void(0);">Action</a></li>
                                        <li><a href="javascript:void(0);">Another action</a></li>
                                        <li><a href="javascript:void(0);">Something else here</a></li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                        <div class="body">
                            <div class="table-responsive">
                                <table class="table table-hover dashboard-task-infos">
                                    <thead>
                                        <tr>
                                            <th>World Title</th>
                                            <th>World Role</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                            <% data = JSON(@world.role_table) %>
                                            <% data.each do |world_id, role| %>
                                            <tr> 
                                            <%thisworld=World.find(world_id)%>
                                            <% each= User.find_by(:email => thisworld.title) %>
                                                <td><%= thisworld.title %></td>                  
                                                <td><%= role %></td>
                                            </tr> 
                                            <%end%>  
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- #END# Table -->
                
                <!-- Table -->
                <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8">
                    <div class="card">
                        <div class="header">
                            <h2>Welcome Admin, World Roles:</h2>
                            <ul class="header-dropdown m-r--5">
                                <li class="dropdown">
                                    <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                        <i class="material-icons">more_vert</i>
                                    </a>
                                    <ul class="dropdown-menu pull-right">
                                        <li><a href="javascript:void(0);">Action</a></li>
                                        <li><a href="javascript:void(0);">Another action</a></li>
                                        <li><a href="javascript:void(0);">Something else here</a></li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                        <div class="body">
                            <div class="table-responsive">
                                <table class="table table-hover dashboard-task-infos">
                                    <thead>
                                        <tr>
                                            <th>Role</th>
                                            <th>Privilege</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                            <% data = JSON(@world.role_table) %>
                                            <% @p_table.each do |role, privilege| %>
                                            <tr> 
                                                <td><%= role %></td>                  
                                                <td><%= privilege %></td>
                                            </tr> 
                                            <%end%>  
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- #END# Table -->


        </div>
    </section>



